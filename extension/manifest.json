{
  "manifest_version": 2,

  "name": "AdÂ¢entive",
  "description": "A win-win advertising strategy",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "activeTab",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "background"
  ],
  "content_scripts": [{
    "js": ["extension.js", "popup.js"],
    "matches": ["<all_urls>", "http://*/*", "https://*/*"],
    "all_frames": true
  }],
	"background":
	{
		"scripts":	["background.js"]
	},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
